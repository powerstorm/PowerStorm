<%= javascript_include_tag "raphael.js", "map_render.js", "scale.raphael.js"%>
<div id="canvas">
	<!--
	<div class="image_wrapper">
		<img id="map_image" src="images/map.png"/>
	</div>
	-->
	
	<div class="paper_wrapper">
		<div id="paper"></div>
      <div class="info">
        <p>PowerStorm aggregates electricity usage information and presents electricity usage and analyzed data in a meaningful and stimulating way.</p>
        <p>For all inquiries about PowerStorm, please contact Patrick Yoho: <a href="mailto:pyoho11@my.whitworth.edu">pyoho11@my.whitworth.edu</a></p>
      </div>
	</div>
	<% @buildings.each do |building| %>
	<div class="buildings" id="<%= building.abbreviation %>" style>
		<h2><%= building.building_name %></h2>
		<div>
		  <p class="building_info">Building Type: <%= building.building_type.capitalize %></p>
		  
		  <% if building.building_type == "dorm" %>
		  <p class="building_info">Occupant Capacity: <%= building.capacity %></p>
		  <% end %>
		  
		  <% if building.area %>
		  <p class="building_info">Area: <%= building.area %> square feet</p>
		  <% end %>
	  
		</div>
	</div>
  <% end %>
</div>

<% unless @logged_out %>
  <%= link_to 'Logout', logout_path, :method => :delete %>
<% end %>